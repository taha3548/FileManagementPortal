@model FileManagementPortal.ViewModels.FileDetailViewModel
@{
    ViewData["Title"] = "Dosya Detayları";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2>@Model.File.FileName</h2>
                    <p class="text-muted">@Model.File.Description</p>
                    
                    <div class="mb-3">
                        <strong>Kategoriler:</strong>
                        @if (Model.File.Categories != null && Model.File.Categories.Any())
                        {
                            @foreach (var category in Model.File.Categories)
                            {
                                <span class="badge bg-info">@category.Name</span>
                            }
                        }
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Dosya Boyutu:</strong> @((Model.File.FileSize / 1024.0 / 1024.0).ToString("F2")) MB
                        </div>
                        <div class="col-md-6">
                            <strong>İndirmeler:</strong> @Model.File.DownloadCount
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Yükleme Tarihi:</strong> @Model.File.UploadedAt.ToString("dd.MM.yyyy HH:mm")
                        </div>
                    </div>

                    <div class="mb-3">
                        <a href="@Url.Action("Download", new { id = Model.File.Id })" class="btn btn-success btn-lg">
                            <i class="bi bi-download me-2"></i>Dosyayı İndir
                        </a>
                        <a href="@Url.Action("Edit", new { id = Model.File.Id })" class="btn btn-warning btn-lg">
                            <i class="bi bi-pencil me-2"></i>Düzenle
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>Dosyalara Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            @if (Model.SimilarFiles != null && Model.SimilarFiles.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">Benzer Dosyalar</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var file in Model.SimilarFiles)
                            {
                                <a href="@Url.Action("Details", new { id = file.Id })" class="list-group-item list-group-item-action">
                                    <h6 class="mb-1">@file.FileName</h6>
                                    <small class="text-muted">@((file.FileSize / 1024.0 / 1024.0).ToString("F2")) MB</small>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
