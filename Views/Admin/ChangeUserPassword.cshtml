@{
    ViewData["Title"] = "Kullanıcı Şifresi Değiştir";
    // AdminController.ChangeUserPassword (GET) action sends values via ViewData
    var userEmail = ViewData["UserEmail"] as string ?? "";
    var userId = ViewData["UserId"] as string ?? "";
}

<!-- Admin User Password Change Page -->
<!-- AdminController.ChangeUserPassword (GET) action sends user information to this view via ViewData -->
<!-- Admin uses this form to change another user's password -->
<!-- NOTE: Standard admin (admin@gmail.com) password cannot be changed -->
<!-- [Authorize(Roles = "Admin")] allows only admin users to access -->

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <!-- Page header -->
            <h2><i class="bi bi-key me-2"></i>Kullanıcı Şifresi Değiştir</h2>
            <!-- Return to user detail page button -->
            <a asp-action="UserDetail" asp-route-id="@userId" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Geri
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow-sm border-0">
            <!-- Card header - user email is shown -->
            <div class="card-header" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.18) 0%, rgba(34, 197, 94, 0.18) 100%);">
                <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i>@userEmail</h5>
            </div>
            <div class="card-body">
                <!-- Success message (from TempData) -->
                <!-- AdminController.ChangeUserPassword (POST) action sets TempData["SuccessMessage"] -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                    </div>
                }
                
                <!-- Error message (from TempData) -->
                <!-- AdminController.ChangeUserPassword (POST) action sets TempData["ErrorMessage"] -->
                <!-- Example: "Standard admin password cannot be changed" -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                    </div>
                }

                <!-- Password change form -->
                <!-- asp-action="ChangeUserPassword": POST operation goes to AdminController.ChangeUserPassword action -->
                <form asp-action="ChangeUserPassword" method="post">
                    <!-- AntiForgeryToken: CSRF protection -->
                    @Html.AntiForgeryToken()
                    <!-- User ID - hidden input (required for form submit) -->
                    <!-- AdminController.ChangeUserPassword (POST) action uses userId to find the user -->
                    <input type="hidden" name="userId" value="@userId" />

                    <!-- New password input field -->
                    <!-- name="newPassword": AdminController.ChangeUserPassword (POST) action receives as parameter -->
                    <!-- required: HTML5 validation, mandatory field -->
                    <!-- minlength="6": HTML5 validation, minimum 6 characters -->
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">
                            <i class="bi bi-lock me-2"></i>Yeni Şifre
                        </label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" placeholder="En az 6 karakter">
                        <small class="form-text text-muted">Şifre 6-100 karakter olmalıdır. Büyük ve küçük harfler içermelidir.</small>
                    </div>

                    <!-- Password confirmation input field -->
                    <!-- name="confirmPassword": AdminController.ChangeUserPassword (POST) action receives as parameter -->
                    <!-- JavaScript validates password match -->
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">
                            <i class="bi bi-lock-fill me-2"></i>Şifreyi Onayla
                        </label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" placeholder="Şifreyi yeniden girin">
                    </div>

                    <!-- Warning message -->
                    <!-- Informs user about the effects of password change -->
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Uyarı:</strong> Bu işlem kullanıcının mevcut şifresini değiştirecektir. Kullanıcı yeni şifre ile giriş yapabilecektir.
                    </div>

                    <!-- Form buttons -->
                    <div class="d-grid gap-2">
                        <!-- Form submit button -->
                        <!-- Sends to AdminController.ChangeUserPassword (POST) action -->
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle me-2"></i>Şifreyi Değiştir
                        </button>
                        <!-- Cancel button - Returns to user detail page -->
                        <a asp-action="UserDetail" asp-route-id="@userId" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Password match validation - Client-side validation
        // Validates as user types in password confirmation field
        // Uses HTML5 setCustomValidity() (browser's native validation)
        document.getElementById('confirmPassword').addEventListener('input', function() {
            // Get value from new password field
            var newPassword = document.getElementById('newPassword').value;
            // Get value from password confirmation field (this = confirmPassword input element)
            var confirmPassword = this.value;
            
            // Do passwords not match and is confirmation field not empty?
            if (newPassword !== confirmPassword && confirmPassword.length > 0) {
                // If not matching, show custom validation message
                // Browser will prevent form submit and show message
                this.setCustomValidity('Şifreler eşleşmiyor');
            } else {
                // If matching or field is empty, clear validation message
                // Form can be submitted
                this.setCustomValidity('');
            }
        });
    </script>
}
