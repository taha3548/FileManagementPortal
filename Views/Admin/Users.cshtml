@model List<FileManagementPortal.Models.AppUser>
@inject Microsoft.AspNetCore.Identity.UserManager<FileManagementPortal.Models.AppUser> UserManager
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    ViewData["HideLayoutAlerts"] = true;
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h2><i class="bi bi-people me-2"></i>Kullanıcı Yönetimi</h2>
            <div>
                <a asp-action="Dashboard" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Panele Dön
                </a>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>E-posta</th>
                            <th>Kullanıcı Adı</th>
                            <th>Oluşturma Tarihi</th>
                            <th>Roller</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var isSuperAdmin = user.Email?.ToLower() == "admin@gmail.com";
                            var isTargetUserAdmin = await UserManager.IsInRoleAsync(user, "Admin");
                            var currentUserIsSuperAdmin = User.Identity?.Name?.ToLower() == "admin@gmail.com";
                            var roles = await UserManager.GetRolesAsync(user);
                            
                            // Site Admin bilgileri sansürlenmeli mi? (Diğer adminler görüyorsa evet, kendisi görüyorsa hayır)
                            var shouldCensorSuperAdmin = isSuperAdmin && !currentUserIsSuperAdmin;
                            
                            <tr class="@(isSuperAdmin ? "table-success" : "")">
                                <td>
                                    @if (shouldCensorSuperAdmin)
                                    {
                                        <span class="text-warning">a***@@g****.com</span>
                                    }
                                    else
                                    {
                                        @user.Email
                                    }
                                </td>
                                <td>
                                    @if (shouldCensorSuperAdmin)
                                    {
                                        <span class="text-warning">***</span>
                                    }
                                    else
                                    {
                                        @(user.UserName ?? "-")
                                    }
                                </td>
                                <td>
                                    @if (shouldCensorSuperAdmin)
                                    {
                                        <span class="text-warning">***</span>
                                    }
                                    else
                                    {
                                        @user.CreatedAt.ToString("dd.MM.yyyy")
                                    }
                                </td>
                                <td>
                                    @if (isSuperAdmin)
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-crown me-1"></i>Site Admin</span>
                                    }
                                    else
                                    {
                                        @foreach (var role in roles)
                                        {
                                            <span class="badge @(role == "Admin" ? "bg-danger" : "bg-primary") me-1">@role</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @if (isSuperAdmin && !currentUserIsSuperAdmin)
                                    {
                                        <!-- Diğer adminler Site Admin'i göremez -->
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-shield-lock me-1"></i>Korumalı
                                        </span>
                                    }
                                    else if (isSuperAdmin && currentUserIsSuperAdmin)
                                    {
                                        <!-- Site Admin kendi profilini görüyor -->
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="UserDetail" asp-route-id="@user.Id" class="btn btn-outline-info" title="Detay">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    }
                                    else if (isTargetUserAdmin && !currentUserIsSuperAdmin)
                                    {
                                        <!-- Admin kullanıcı - sadece listede görünür, hiçbir işlem yok -->
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-shield me-1"></i>Admin
                                        </span>
                                    }
                                    else
                                    {
                                        <!-- Normal kullanıcı veya super admin işlem yapıyor -->
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="UserDetail" asp-route-id="@user.Id" class="btn btn-outline-info" title="Detay">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="ChangeUserPassword" asp-route-id="@user.Id" class="btn btn-outline-primary" title="Şifre Değiştir">
                                                <i class="bi bi-key"></i>
                                            </a>
                                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Sil">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2"></i>Henüz kullanıcı bulunamadı.
            </div>
        }
    </div>
</div>
