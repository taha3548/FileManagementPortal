@model IEnumerable<FileManagementPortal.Models.Category>
@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<!-- Admin Category Management Page -->
<!-- AdminController.Categories action sends a list of all categories to this view -->
<!-- Admin can view, create, edit, and delete categories -->
<!-- [Authorize(Roles = "Admin")] allows only admin users to access -->

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <!-- Page header -->
            <h2><i class="bi bi-tags me-2"></i>Kategori Yönetimi</h2>
            <div>
                <!-- Create new category button - Redirects to AdminController.CreateCategory page -->
                <a asp-action="CreateCategory" class="btn btn-success me-2">
                    <i class="bi bi-plus-circle me-2"></i>Yeni Kategori
                </a>
                <!-- Return to dashboard button -->
                <a asp-action="Dashboard" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Panele Dön
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Category list table -->
<div class="card shadow-sm border-0">
    <div class="card-body">
        <!-- Show table if category list exists -->
        @if (Model != null && Model.Any())
        {
            <!-- Responsive table - horizontal scroll on mobile -->
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Kategori Adı</th>
                            <th>Açıklama</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Create row for each category -->
                        <!-- AdminController.Categories action retrieves all categories using _categoryRepository.GetAllAsync() -->
                        @foreach (var category in Model)
                        {
                            <tr>
                                <!-- Category name -->
                                <td>@category.Name</td>
                                
                                <!-- Category description (optional) -->
                                <td>@(category.Description ?? "-")</td>
                                
                                <!-- Creation date - Date format -->
                                <td>@category.CreatedAt.ToString("dd.MM.yyyy")</td>
                                
                                <!-- Active/Inactive status - Shown with Badge -->
                                <!-- Active is green (bg-success), Inactive is red (bg-danger) -->
                                <!-- Inactive categories are not shown in file upload forms -->
                                <td>
                                    <span class="badge @(category.IsActive ? "bg-success" : "bg-danger")">
                                        @(category.IsActive ? "Aktif" : "Pasif")
                                    </span>
                                </td>
                                
                                <!-- Action buttons -->
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <!-- Edit button - Redirects to AdminController.EditCategory page -->
                                        <a href="@Url.Action("EditCategory", new { id = category.Id })" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        
                                        <!-- Delete button - Works with Form POST -->
                                        <!-- Sends POST request to AdminController.DeleteCategory action -->
                                        <!-- onsubmit: JavaScript confirm dialog for confirmation -->
                                        <!-- NOTE: Cannot delete if category has associated files (checked in AdminController) -->
                                        <form asp-action="DeleteCategory" method="post" class="d-inline" onsubmit="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?');">
                                            <input type="hidden" name="id" value="@category.Id" />
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <!-- Info message if no categories exist -->
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2"></i>Henüz kategori bulunamadı.
            </div>
        }
    </div>
</div>
