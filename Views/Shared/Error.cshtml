@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<!-- Hata Sayfası -->
<!-- HomeController.Error action'ından bu view'a ErrorViewModel gönderiliyor -->
<!-- Program.cs'de UseExceptionHandler("/Home/Error") ile yapılandırılmış -->
<!-- Uygulama genelinde oluşan hatalar için gösteriliyor -->
<!-- Herkes erişebilir (authentication gerekmez) -->

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0">
            <div class="card-body text-center p-5">
                <!-- Hata ikonu - Bootstrap Icons -->
                <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                
                <!-- Hata başlıkları -->
                <h1 class="text-danger mt-3">Hata</h1>
                <h2 class="text-danger mt-3">İsteğiniz işlenirken bir hata oluştu.</h2>

                <!-- RequestId gösterimi -->
                <!-- ErrorViewModel.ShowRequestId: RequestId null veya boş değilse true -->
                <!-- RequestId: Hata loglarında takip için unique ID -->
                @if (Model.ShowRequestId)
                {
                    <p class="mt-4">
                        <strong>İstek Kimliği:</strong> <code>@Model.RequestId</code>
                    </p>
                }

                <!-- Ana sayfaya dön butonu -->
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house me-2"></i>Ana Sayfaya Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
